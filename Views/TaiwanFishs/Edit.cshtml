@model Fish.Models.TaiwanFish

@{
    ViewBag.Title = "Edit";
}

<h2>修改</h2>


@using (Html.BeginForm("Edit", "TaiwanFishs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>台灣魚類</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Taiwan_Distribution, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Taiwan_Distribution, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Taiwan_Distribution, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Habitat, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Habitat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Habitat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Max_body_length, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Max_body_length, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Max_body_length, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <input type="hidden" id="img_pa" name="img_pa" value=@Html.DisplayFor(model => model.Image_Path)>
        @Html.LabelFor(model => model.Image_Path, "原本圖片", htmlAttributes: new { @class = "control-label col-md-2" })
        <img src=@Html.DisplayFor(model => model.Image_Path) width="200" heigh="100" alt="魚類圖片">
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Image_Path, "修改圖片", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Image_Path, new { htmlAttributes = new { @type = "file",@accept = "image/*" } })
            @Html.ValidationMessageFor(model => model.Image_Path, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="儲存" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("回首頁", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
